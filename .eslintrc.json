{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-new": "off",
    "no-nested-ternary": "off",
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "radix": ["error", "as-needed"],
    "no-console": ["error", { "allow": ["warn", "error"] }]
  }
}